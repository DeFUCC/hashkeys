{
	"include": [
		"App.vue",
		"app.js",
		"**/*.js",
		"**/*.vue"
	],
	"exclude": [
		"node_modules",
		"/dist/*.*"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"target": "esnext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
	},
	"vueCompilerOptions": {
		"plugins": [
			"@vue/language-plugin-pug"
		]
	}
}